<ImportPlaylistCard>:
    text: root.playlist.get_title()
    secondary_text: root.playlist.get_track_count() + " tracks"
    tertiary_text: "unimported tracks to come"

    ImageLeftWidget:
        source: root.playlist.get_thumbnail()

    IconRightWidget:
        icon: "playlist-plus"
        on_release: root.on_import_callback(root.playlist)