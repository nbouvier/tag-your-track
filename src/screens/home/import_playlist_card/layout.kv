<ImportPlaylistCard>:
    text: root.title
    secondary_text: root.tracks + " tracks"
    tertiary_text: "unimported tracks to come"
    on_release: root.on_release_callback(root.playlist_id)

    ImageLeftWidget:
        source: root.thumbnail

    IconRightWidget:
        icon: "playlist-plus"
        on_release: root.on_import_callback(root.playlist_id)