<PlaylistSongCard>
    size_hint_y: None
    height: "68dp"
    md_bg_color: app.theme_cls.bg_light
    padding: "8dp"
    radius: "4dp"
    style: "elevated"

    MDBoxLayout:
        orientation: 'vertical'
        spacing: "4dp"
        padding: "8dp"

        MDLabel:
            text: root.title
            font_style: "Subtitle1"
            theme_text_color: "Primary"
            size_hint_y: None
            height: self.texture_size[1]

        MDLabel:
            text: root.artist
            theme_text_color: "Secondary"
            font_style: "Caption"
            size_hint_y: None
            height: self.texture_size[1]