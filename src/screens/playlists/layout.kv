#:include src/screens/playlists/playlist_card/layout.kv
#:include src/screens/playlists/playlist_track_card/layout.kv

<PlaylistsScreen>:
    MDBoxLayout:
        orientation: 'horizontal'
            
        MDScrollView:
            do_scroll_x: False
            do_scroll_y: True
        
            MDBoxLayout:
                id: playlists_container
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
            
        MDScrollView:
            MDList:
                id: tracks_container