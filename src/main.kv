#:include src/screens/home/layout.kv
#:include src/screens/playlists/layout.kv
#:include src/screens/tags/layout.kv

MDBoxLayout:
    orientation: 'vertical'

    MDScreenManager:
        id: screen_manager

    MDBottomNavigation:
        panel_color: app.theme_cls.primary_color

        MDBottomNavigationItem:
            name: 'home'
            text: 'Home'
            icon: 'home'
            on_tab_press: app.switch_screen('home')

        MDBottomNavigationItem:
            name: 'playlists'
            text: 'Playlists'
            icon: 'playlist-music'
            on_tab_press: app.switch_screen('playlists')

        MDBottomNavigationItem:
            name: 'tags'
            text: 'Tags'
            icon: 'tag'
            on_tab_press: app.switch_screen('tags')
